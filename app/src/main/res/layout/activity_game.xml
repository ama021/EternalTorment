<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="667dp"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">

    <com.example.jisaaa3.eternaltorment.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.jisaaa3.eternaltorment.GameView>



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="284dp"
        android:layout_height="168dp"
        android:layout_gravity="bottom|start"
        android:src="@drawable/direction_pad"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="284dp"
        android:layout_height="168dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/dpad_left"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:alpha="0"
            android:text="Button"
            android:layout_marginStart="48dp"
            android:layout_below="@+id/dpad_up"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/dpad_down" />

        <Button
            android:id="@+id/dpad_right"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:alpha="0"
            android:layout_marginStart="32dp"
            android:layout_below="@+id/dpad_up"
            android:layout_toEndOf="@+id/dpad_left"
            android:layout_above="@+id/dpad_down" />

        <Button
            android:id="@+id/dpad_down"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:alpha="0"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/dpad_up" />

        <Button
            android:id="@+id/dpad_up"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:alpha="0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <Button
        android:id="@+id/swipe_input"
        android:layout_width="291dp"
        android:layout_height="162dp"
        android:alpha="0.25"
        android:text="Swipe"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/clear"/>

    <Button
        android:id="@+id/ohShitButton"
        android:layout_width="1000px"
        android:layout_height="200px"
        android:gravity="center"
        android:text="OH SHIT BUTTON"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/simple_button_background"
        android:textColor="@color/light_orange"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

